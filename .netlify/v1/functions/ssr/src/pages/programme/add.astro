---
import Layout from "../../layouts/Layout.astro";
import { addInvite } from "../../../backend/backend.mjs";
let message = '';
if (Astro.request.method === "POST") {
    const formData = await Astro.request.formData();
    const response = await addInvite(formData);
    message = response.message;
}
---

<Layout>
    <div class="mt-20 flex flex-col items-center justify-center container mx-auto p-4">
        <div class="flex justify-center text-4xl mt-10 mb-7">
            <h1 class="font-aclonica uppercase text-purple">Ajouter une activitée</h1>
        </div>
        <form action="/programme/add" method="POST" enctype="multipart/form-data" class="w-full max-w-lg bg-white p-6 rounded-lg shadow-md">
            <div class="mb-4">
                <label for="titre_act" class="block font-comfortaa mb-2 text-purple">Nom de l'activité</label>
                <input type="text" id="titre_act" name="titre_act" placeholder="Nom de l'activité" required class="w-full p-2 border border-gray-300 rounded-md" />
            </div>
            <div class="mb-4">
                <label for="type" class="block font-comfortaa mb-2 text-purple">Type de l'activité</label>
                <input type="text" id="type" name="type" placeholder="Type de l'activité" required class="w-full p-2 border border-gray-300 rounded-md" />
            </div>
            <div class="mb-4">
                <label for="date" class="block font-comfortaa mb-2 text-purple">Date de l'activité</label>
                <input type="date" id="date" name="date" placeholder="Date de l'activité" required class="w-full p-2 border border-gray-300 rounded-md" />
            </div>
            <div class="mb-4">
                <label for="lieu" class="block font-comfortaa mb-2 text-purple">Lieu de l'activité</label>
                <input type="text" id="lieu" name="lieu" placeholder="Lieu de l'activité" class="w-full p-2 border border-gray-300 rounded-md" />
            </div>
            <div class="mb-4">
                <label for="description" class="block font-comfortaa mb-2 text-purple">Description de l'activité</label>
                <textarea type="text" id="description" name="description" placeholder="Description de l'activité" class="w-full p-2 border border-gray-300 rounded-md" />
            </div>
            <div class="flex justify-center">
                <button type="submit" class="bg-purple lg:hover:bg-purple-500 text-white font-comfortaa py-2 px-4 rounded-full">Ajouter</button>
            </div>
        </form>
        <p class="mt-4 text-pink">{message}</p>
    </div>
</Layout>